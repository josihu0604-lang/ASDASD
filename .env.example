# ========================================
# ZZIK LIVE - Environment Variables Template
# ========================================
# Copy this file to .env.local and fill in the values
# NEVER commit .env.local to git!

# ========================================
# App Configuration
# ========================================
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME="ZZIK LIVE"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================================
# Database (Supabase)
# ========================================
DATABASE_URL=postgresql://user:password@host:5432/database
DIRECT_URL=postgresql://user:password@host:5432/database

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========================================
# Authentication
# ========================================
JWT_SECRET=your-jwt-secret-min-32-chars
AUTH_TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Magic Link
MAGIC_LINK_SECRET=your-magic-link-secret
MAGIC_LINK_EXPIRY=15m

# OTP
OTP_EXPIRY=5m
OTP_LENGTH=6

# ========================================
# Mapbox
# ========================================
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.eyJ1...your-token

# ========================================
# Payment Integration
# ========================================
# 토스페이먼츠
TOSS_CLIENT_KEY=test_ck_...
TOSS_SECRET_KEY=test_sk_...
TOSS_API_URL=https://api.tosspayments.com

# 금융결제원 오픈뱅킹
OPENBANKING_CLIENT_ID=your-client-id
OPENBANKING_CLIENT_SECRET=your-client-secret
OPENBANKING_API_URL=https://testapi.openbanking.or.kr
OPENBANKING_REDIRECT_URI=http://localhost:3000/api/auth/openbanking/callback

# ========================================
# Verification Services
# ========================================
# NICE API (본인인증)
NICE_CLIENT_ID=your-nice-client-id
NICE_CLIENT_SECRET=your-nice-client-secret
NICE_API_URL=https://svc.niceapi.co.kr

# ========================================
# SMS/Email Services
# ========================================
# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Resend (Email)
RESEND_API_KEY=re_...

# ========================================
# Social Media APIs
# ========================================
# Instagram
INSTAGRAM_APP_ID=your-app-id
INSTAGRAM_APP_SECRET=your-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3000/api/auth/instagram/callback

# Facebook
FACEBOOK_APP_ID=your-app-id
FACEBOOK_APP_SECRET=your-app-secret

# ========================================
# AI/ML Services
# ========================================
# OpenAI
OPENAI_API_KEY=sk-proj-...
OPENAI_ORG_ID=org-...

# ========================================
# Analytics & Monitoring
# ========================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
SENTRY_AUTH_TOKEN=your-sentry-token

# ========================================
# Feature Flags
# ========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_TRACKING=true
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAGIC_LINK=5
RATE_LIMIT_OTP=3

# ========================================
# CORS & Security
# ========================================
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ENABLED=true

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true
LOG_REQUESTS=true

# ========================================
# Testing
# ========================================
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/zzik_test
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3000
